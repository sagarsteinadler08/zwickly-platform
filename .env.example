# Zwickly Platform Environment Variables
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/zwickly?schema=public"

# Google Gemini AI (Pixi Chatbot)
GOOGLE_GEMINI_API_KEY="your-gemini-api-key-here"

# Frontend URL (for CORS)
NEXT_PUBLIC_FRONTEND_URL="http://localhost:8080"

# Backend URL
NEXT_PUBLIC_API_URL="http://localhost:3000"

# Socket.IO URL
NEXT_PUBLIC_SOCKET_URL="http://localhost:4001"

# Feature Flags
NEXT_PUBLIC_ANALYTICS_ENABLED="true"
NEXT_PUBLIC_PIXI_AI_ENABLED="true"

# Session Secret (for JWT - generate a random string)
SESSION_SECRET="your-secret-key-here-minimum-32-characters"

# Email (Optional - for notifications)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASSWORD=""

# Sentry (Optional - for error tracking)
SENTRY_DSN=""

# Environment
NODE_ENV="development"
